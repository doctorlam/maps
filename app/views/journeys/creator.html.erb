
<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Journey</th>
    <th class="center">Description</th>
  </tr>

  <% @journeys.each do |journey| %>
    <tr>
      <td><%= journey.name %></td>
      <td><%= journey.description %></td>
      <td class="center">
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", journey, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_journey_path(journey), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', journey, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>


<br>
<% if (user_signed_in?) %>
  <%= link_to 'New Journey', new_journey_path, class: "btn btn-link" %>
<% end %>