<%= form_for([@journey, @claim]) do |f| %>
  <% if claim.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(claim.errors.count, "error") %> prohibited this claim from being saved:</h2>

      <ul>
      <% claim.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  <strong>Clues:</strong>
  <button type="button">Show Clue</button>

<ol>
  <% for clue in @journey.clues %>
      <li><%= clue.step %>
      <%= image_tag clue.clueimage_url(:thumb) if clue.clueimage? %>
       </li>

      <% end %>

  </ol>

  <div class="field">
    <%= f.label :submission, "Final Answer" %><br>
    <%= f.text_area :submission %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit Answer' %>
  </div>
<% end %>
<script>
$('ol > li').hide();
$('button').click(function() {
    $('ol > li:hidden:first').show();
});
</script>